<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.TaskActivity"
    android:orientation="vertical"
    android:background="@drawable/background_main">


    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_extrabold"
        android:gravity="center"
        android:text="DashBoard"
        android:textColor="@color/dashboard"
        android:textSize="25sp"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_tasks_Header2"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Welcome to learn"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:paddingTop="30dp"
        android:paddingStart="35dp"/>

    <TextView
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="@string/credits"
        android:textColor="@color/white"
        android:paddingTop="30dp"
        android:paddingStart="35dp"
        android:textSize="25sp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:layout_height="150dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/credits_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:paddingRight="230dp"
            app:srcCompat="@drawable/credits_img" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingTop="30dp"
        android:paddingStart="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="153dp"
            android:layout_height="155dp"
            android:scaleType="fitXY"
            android:src="@drawable/chatimg">
        </ImageView>

        <ImageView
            android:id="@+id/btn_videos"
            android:layout_width="210dp"
            android:layout_height="157dp"
            android:paddingStart="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/videos_img">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="15dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_task"
            android:layout_width="153dp"
            android:layout_height="155dp"
            android:scaleType="fitXY"
            android:src="@drawable/shop_img">
        </ImageView>

        <ImageView
            android:id="@+id/btn_shop"
            android:layout_width="210dp"
            android:layout_height="157dp"
            android:paddingStart="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/shop_img">

        </ImageView>
    </LinearLayout>



</LinearLayout>