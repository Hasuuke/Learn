<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shop_background"
    android:orientation="vertical"
    tools:context=".Screens.ShopActivity">


    <TextView
        android:id="@+id/tv_shop_Header1"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="170dp"
        android:paddingTop="24dp"
        android:text="Shop"
        android:onClick="onClick_Shop"
        android:textColor="@color/theme"
        android:textSize="24dp" />


    <ImageView
        android:id="@+id/ivSpecial"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        app:srcCompat="@drawable/fortnite_special" />

    <TextView
        android:id="@+id/tvTotalCredits"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="You have 3600 Credits"
        android:textSize="16dp"
        android:paddingLeft="29dp"
        android:paddingTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/grey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShop"
        android:layout_width="match_parent"
        android:layout_height="354dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:divider="@drawable/empty_divider"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingTop="18dp"
        android:showDividers="middle">

        <Button
            android:id="@+id/btn_shop_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home_button"
            android:text=""
            android:theme="@style/Button.White"
            android:onClick="showHome"/>

        <Button
            android:id="@+id/btn_shop_videos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/videos_button"
            android:text=""
            android:theme="@style/Button.White" />

        <Button
            android:id="@+id/btn_shop_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/chat_button"
            android:text=""
            android:theme="@style/Button.White" />

        <Button
            android:id="@+id/btn_shop_shop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shop_button"
            android:text=""
            android:theme="@style/Button.White" />
    </LinearLayout>
</LinearLayout>