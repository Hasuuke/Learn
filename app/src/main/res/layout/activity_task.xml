<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.TaskActivity"
    android:orientation="vertical"
    android:background="@drawable/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="341dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="82dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="112dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnChat"
            android:layout_width="207dp"
            android:layout_height="202dp"
            android:background="@drawable/chatimg"
            android:theme="@style/Button.White"
            android:text=""/>

        <Button
            android:id="@+id/btnVideos"
            android:layout_width="204dp"
            android:layout_height="202dp"
            android:background="@drawable/videos_img"
            android:theme="@style/Button.White"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTasks"
            android:layout_width="204dp"
            android:layout_height="202dp"
            android:background="@drawable/tasks_main_button"
            android:theme="@style/Button.White"
            android:text=""/>

        <Button
            android:id="@+id/btnShop"
            android:layout_width="204dp"
            android:layout_height="202dp"
            android:background="@drawable/shop_img"
            android:theme="@style/Button.White"
            android:text=""/>
    </LinearLayout>
</LinearLayout>